<h2>Definition: <%= @message.define %></h2>
<h3>Word: <%= @message.word.name %></h3>

<form action="/words/<%= @message.word.id %>/messages/<%= @message.id %><%= @message.lyrics %><%= @message.writer %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename message</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update message</button>
</form>

<form action="/words/<%= @message.word.id %>/messages/<%= @message.id %><%= @message.lyrics %><%= @message.writer %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete message</button>
</form>

<a href="/words/<%= @message.word.id %>">Back to <%= @message.word.name %></a>
