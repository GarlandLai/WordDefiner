<h1>Word Definer</h1>

<h3>Available Words</h3>

<% if @words.any? %>
  <ul>
    <% @words.each do |word| %>
      <li><strong><%=word.name%></strong></li>
    <% end %>
  </ul>
<% else %>
  <p>There are currently no words.</p>
<% end %>

<a href="/words/new">Add a new word</a>


<!-- Needs to go into it's own page? -->
<form action="/words_search" method='post'>
  <div class="form-group">
    <label for="search">Search</label>
    <input type="text" name="search" class="form-control" id="search">
  </div>
  <button type="submit" class="btn btn-info">Search</button>
</form>

<br>
<h3>Details Pages</h3>

 <% @words.each do |word| %>
  <li><a href="/words/<%= word.id %>"><%=word.name %></a></li>
  <% end %>
